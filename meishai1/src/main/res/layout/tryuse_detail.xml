<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lay_top"
        style="@style/top_titile_style"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/backMain"
            style="@style/top_title_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/back_arrow_white"
            android:drawablePadding="3dp"
            android:text="@string/tryuse" />

        <TextView
            style="@style/top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="试用详情" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_top"
        android:background="@color/main_back"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.meishai.net.volley.toolbox.NetworkImageView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/find_point_detail_style"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dis_30" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />

                <RelativeLayout
                    style="@style/find_point_detail_style"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dis_30" >

                    <TextView
                        android:id="@+id/app_tv"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="195人申请，10人获取试用，10人已领取" />
                </RelativeLayout>

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    style="@style/find_point_detail_style"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dis_30" >

                    <TextView
                        android:id="@+id/endtime"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="剩余时间：10天1小时46分5秒" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    style="@style/find_point_detail_style"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dis_30" >

                    <TextView
                        android:id="@+id/tv_snum"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="限量：10份,价值:69元,商家已存担保金690元" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/view_hor_match_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis_20"
                android:background="@color/white"
                android:orientation="vertical" >

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis_30"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dis_15"
                        android:text="免责申明："
                        android:textColor="@color/color_d8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text1"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dis_15"
                        android:layout_marginTop="@dimen/dis_10" />

                    <View style="@style/view_place_transparent" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis_20"
                android:background="@color/white"
                android:orientation="vertical" >

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis_30"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dis_15"
                        android:text="温馨提醒："
                        android:textColor="@color/color_d8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text2"
                        style="@style/find_point_detail_text_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dis_15"
                        android:layout_marginTop="@dimen/dis_10" />

                    <View style="@style/view_place_transparent" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                style="@style/view_hor_match_line"
                android:layout_marginTop="@dimen/dis_20" />

            <LinearLayout
                android:id="@+id/lay_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:paddingLeft="@dimen/dis_30"
                android:paddingRight="@dimen/dis_30"
                android:paddingTop="@dimen/dis_30" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View style="@style/view_hor_match_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/main_back"
            android:paddingLeft="@dimen/dis_30" >

            <Button
                android:id="@+id/btn_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_collection"
                android:drawablePadding="@dimen/dis_10"
                android:text="收藏"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dis_45"
                android:layout_toRightOf="@+id/btn_fav"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_share"
                android:drawablePadding="@dimen/dis_10"
                android:text="分享"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_oper"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_exchange_selector"
                android:text="免费申请"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/view_hor_match_line" />
    </LinearLayout>

</RelativeLayout>