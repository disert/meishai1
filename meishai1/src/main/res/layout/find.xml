<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_titile_style" >

        <TextView
            android:id="@+id/title"
            style="@style/top_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/find" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lay_back"
            android:orientation="vertical"
            android:paddingTop="@dimen/dis_20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    android:id="@+id/lay_master"
                    style="@style/lay_ct"
                    android:clickable="true" >

                    <TextView
                        style="@style/lay_ct_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_master"
                        android:drawablePadding="15dip"
                        android:drawableRight="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="@string/find_master" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis_30"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    android:id="@+id/lay_sale"
                    style="@style/lay_ct"
                    android:clickable="true" >

                    <TextView
                        style="@style/lay_ct_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_sale"
                        android:drawablePadding="15dip"
                        android:drawableRight="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="@string/find_sale" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis_30"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View style="@style/view_hor_match_line" />

                <LinearLayout
                    android:id="@+id/lay_point"
                    style="@style/lay_ct"
                    android:clickable="true" >

                    <TextView
                        style="@style/lay_ct_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_point"
                        android:drawablePadding="15dip"
                        android:drawableRight="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="@string/find_point" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />

                <!--
                <LinearLayout
                    android:id="@+id/lay_hb"
                    style="@style/lay_ct"
                    android:clickable="true" >

                    <TextView
                        style="@style/lay_ct_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_red_envelope"
                        android:drawablePadding="15dip"
                        android:drawableRight="@drawable/right_arrow"
                        android:gravity="center_vertical"
                        android:text="@string/find_red_envelope" />
                </LinearLayout>

                <View style="@style/view_hor_match_line" />
                -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>