<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lay_info"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/white"
        android:paddingLeft="@dimen/dis_30"
        android:paddingRight="@dimen/dis_30" >

        <com.meishai.app.widget.CircleNetWorkImageView
            android:id="@+id/thumb"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumb"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="@dimen/dis_30"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/thumb"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/title"
                    style="@style/lay_ct_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxWidth="120dip"
                    android:singleLine="true"
                    android:text="试用担保金"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/value"
                    style="@style/lay_ct_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="-528元"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis_30" >

                <TextView
                    android:id="@+id/time"
                    style="@style/lay_ct_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxWidth="180dip"
                    android:singleLine="true"
                    android:text="2015-01-12 11:23:44"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/status"
                    style="@style/lay_ct_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="未结算"
                    android:textColor="@color/text_color" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>