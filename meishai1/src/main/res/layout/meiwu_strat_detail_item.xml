<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <View style="@style/view_hor_match_line" />

    <View
        style="@style/view_place_transparent"
        android:background="#f5f5f5" />

    <View style="@style/view_hor_match_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/meiwu_strat_detail_item_num"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/tv_back_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/meiwu_strat_detail_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Ymer创意漱口杯情侣水杯"
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/meiwu_strat_detail_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="6dp"
            android:textColor="#555555" />

        <LinearLayout
            android:id="@+id/meiwu_strat_detail_item_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/meiwu_strat_detail_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="￥9.9"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/meiwu_strat_detail_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_cir_back_orange"
                android:text="去唯品会购买!"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/view_hor_match_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/meiwu_strat_detail_item_collect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/meiwu_strat_detail_item_collect_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:clickable="false"
                    android:src="@drawable/has_collect" />

                <TextView
                    android:id="@+id/meiwu_strat_detail_item_collect_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="收藏晒单"
                    android:layout_marginLeft="5dp"
                    android:textColor="#565656"
                    android:textSize="13sp" />
            </LinearLayout>
            <View
                style="@style/view_ver_match_line"/>

            <LinearLayout
                android:id="@+id/meiwu_strat_detail_item_guard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/taste" />

                <TextView
                    android:id="@+id/meiwu_strat_detail_item_guard_title"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="美晒放心购"
                    android:textColor="#565656"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>