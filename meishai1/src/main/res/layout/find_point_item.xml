<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <View style="@style/view_hor_match_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/my_lay_selector"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dis_30" >

        <com.meishai.net.volley.toolbox.NetworkImageView
            android:id="@+id/thumb"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dis_15"
            android:layout_toRightOf="@+id/thumb"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dis_15"
            android:paddingTop="@dimen/dis_30" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_daren"
                    style="@style/btn_daren_style"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="韩版优质全棉打底衫"
                    android:textColor="@color/master_username_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价值：100元"
                    android:textColor="@color/txt_color"
                    android:textSize="13.5sp" />

                <TextView
                    android:id="@+id/allnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis_45"
                    android:text="名额：10人"
                    android:textColor="@color/txt_color"
                    android:textSize="13.5sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/groupid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="对象：V3以上会员"
                android:textColor="@color/txt_color"
                android:textSize="13.5sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/lowpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000积分"
                    android:textColor="@color/title_bg"
                    android:textSize="13.5sp" />
            </LinearLayout>
        </LinearLayout>

        <com.meishai.net.volley.toolbox.NetworkImageView
            android:id="@+id/type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="21dp"
            android:src="@drawable/point_luck" />
    </RelativeLayout>

</LinearLayout>