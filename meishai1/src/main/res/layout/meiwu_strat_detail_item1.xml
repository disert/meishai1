<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <View
            android:id="@+id/meiwu_strat_detail_item_title_up_line"
            style="@style/view_hor_match_line"
            android:layout_marginTop="15dp"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/meiwu_strat_detail_item_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="油状卸妆油"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <View
            android:id="@+id/meiwu_strat_detail_item_title_down_line"
            style="@style/view_hor_match_line"
            android:layout_marginBottom="15dp"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/meiwu_strat_detail_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:text="描述文字"
            android:textColor="#555555"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/meiwu_strat_detail_item_tips"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:paddingLeft="2dp"
            android:text="提示"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/meiwu_strat_detail_item_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/meiwu_strat_detail_item_buy_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/meiwu_strat_detail_item_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="￥9.9"
                android:textColor="#929292"
                android:textSize="12dp"/>

            <LinearLayout
                android:id="@+id/meiwu_strat_detail_item_buy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_cir_back_orange"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/meiwu_strat_detail_item_taste"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/taste1"/>

                <TextView
                    android:id="@+id/meiwu_strat_detail_item_detail"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去唯品会购买!"
                    android:textColor="#ffffff"
                    android:textSize="13sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/meiwu_strat_detail_item_collect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/meiwu_strat_detail_item_buy"
                android:adjustViewBounds="true"
                android:src="@drawable/uncollect_icon"/>


        </RelativeLayout>

        <View
            android:id="@+id/meiwu_strat_detail_item_bottom_line"
            style="@style/view_hor_match_line"
            android:background="#eeeeee"/>


    </LinearLayout>

</LinearLayout>