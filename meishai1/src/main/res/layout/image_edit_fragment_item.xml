<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/image_edit_fragment_item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp">

    <LinearLayout
        android:id="@+id/image_edit_fragment_item_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sticker_item_selector"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.meishai.app.widget.RoundCornerImageView
            android:id="@+id/image_edit_fragment_item_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:adjustViewBounds="true"
            android:src="@drawable/place_default"/>
    </LinearLayout>

    <TextView
        android:id="@+id/image_edit_fragment_item_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="我要上首页"
        android:textColor="@drawable/image_editor_tag_selector"
        android:textSize="10sp"/>

</LinearLayout>