<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/disclose_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/disclose_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/disclose_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="商品名"/>
            <TextView
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:textColor="#555555"
                android:id="@+id/disclose_item_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="来源"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#555555"
                    android:textSize="13sp"
                    android:id="@+id/disclose_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/disclose_item_check"
                    android:textColor="#ff5500"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未审核"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:textSize="13sp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="8dp"
        android:textColor="#555555"
        android:id="@+id/disclose_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="描述"/>
    <View style="@style/view_hor_match_line"
        android:layout_marginTop="8dp"/>
</LinearLayout>