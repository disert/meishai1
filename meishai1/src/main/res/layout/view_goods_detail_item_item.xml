<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingRight="8dp">

    <View
        style="@style/view_ver_match_line"
        android:layout_alignParentLeft="true"/>

    <View
        style="@style/view_ver_match_line"
        android:layout_alignParentRight="true"/>

    <!--<View-->
        <!--style="@style/view_hor_match_line"-->
        <!--android:layout_alignParentTop="true"/>-->

    <!--<View-->
        <!--style="@style/view_hor_match_line"-->
        <!--android:layout_alignParentBottom="true"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goods_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="120dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#555555"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:text="大片大片的一大片"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_item_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="参考价:"
                android:textColor="#999999"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/goods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="19.9"
                android:textSize="10sp"
                android:textColor="#ff3333"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>