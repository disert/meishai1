<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@android:color/white" >

        <View style="@style/view_hor_match_line" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wech">

            <ImageButton
                android:id="@+id/wechat"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_wechat_gray" />

            <TextView
                android:id="@+id/wechat_point"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:text="+1积分"
                android:textSize="7sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/detail_back_red"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/wech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/friend"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/share_friend_gray" />
            <TextView
                android:id="@+id/friend_point"
                android:layout_width="25dp"
                android:layout_height="10dp"
                android:background="@drawable/detail_back_red"
                android:text="+5积分"
                android:textSize="7sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/collect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/buy"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/uncollect_icon"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/cir_purple_btn_selector"
            android:clickable="true"
            android:text="去淘宝购买"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

</LinearLayout>