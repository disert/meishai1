<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/meiwu_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/meiwu_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/meiwu_item_like"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_back_cir"
            android:gravity="center"
             android:orientation="horizontal">
             <ImageView 
                 android:id="@+id/meiwu_item_like_icon"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:src="@drawable/like_white_"/>
            <TextView 
                android:id="@+id/meiwu_item_like_num"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45852"
           		android:textColor="@android:color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/meiwu_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/meiwu_tv_back"
            android:gravity="center_vertical"
            android:text="活动!优雅几何 甜美风潮"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>