<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:paddingLeft="5dp"
    android:paddingTop="5dp">


    <RelativeLayout
        android:padding="0.3dp"
        android:background="@drawable/border_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/home_page_item_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_page_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="150dp"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/home_page_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_page_item_main"
            android:background="@android:color/white"
            android:ellipsize="middle"
            android:lineSpacingExtra="4dp"
            android:lines="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_page_item_desc"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <View style="@style/view_hor_match_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_page_item_avatar_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp">
                    <com.meishai.app.widget.CircleImageView
                        android:id="@+id/home_page_item_avatar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        />
                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/home_page_item_master"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:src="@drawable/icon_master" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/home_page_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="name"
                        android:textColor="#929292"
                        android:textSize="10sp"/>
                </LinearLayout>

                <View
                    style="@style/view_ver_match_line"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/home_page_item_praise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_page_item_praise_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_praise_selector"/>

                    <TextView
                        android:id="@+id/home_page_item_praise_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="1111"
                        android:textColor="#929292"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>