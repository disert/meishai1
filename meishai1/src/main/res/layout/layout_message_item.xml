<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_root"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/my_lay_selector">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/message_item_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/my_tz" />

        <TextView
            android:id="@+id/message_item_text"
            style="@style/lay_ct_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:text="我的福利" />
    </LinearLayout>

    <ImageView
        android:id="@+id/message_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/right_arrow" />

    <com.meishai.app.widget.CircleTextView
        android:id="@+id/message_item_num"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dis_10"
        android:layout_marginTop="1.5dp"
        android:layout_toLeftOf="@+id/message_item_right"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <View style="@style/view_hor_match_line" />
</RelativeLayout>