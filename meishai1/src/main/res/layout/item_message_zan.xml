<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.meishai.app.widget.CircleImageView
            android:id="@+id/zan_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/zan_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员xxx"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/zan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zan_username"
                android:layout_marginTop="5dp"
                android:text="2016-6-14"
                android:textColor="#555555"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/zan_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/zan_username"
                android:text="消息内容"
                android:textColor="#555555"
                android:textSize="10sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/zan_invit"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <View style="@style/view_hor_match_line"/>
</LinearLayout>