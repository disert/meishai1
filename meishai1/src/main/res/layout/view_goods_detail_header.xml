<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="创业牛仔"
                android:textColor="#555555"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/goods_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参考价:"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31元"
                    android:textColor="#ff3333"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/view_hor_match_line"/>

        <TextView
            android:id="@+id/goods_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="啥地方发生的浪费给家里可根据爱是快乐的减肥可拉伸的减肥了卡萨多久了"
            android:textColor="#555555"
            android:textSize="13sp"/>

        <LinearLayout
            android:id="@+id/goods_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"></LinearLayout>


    </LinearLayout>

    <View
        style="@style/view_hor_match_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

</LinearLayout>