<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popup_color"
    android:orientation="vertical" >




        <LinearLayout
            android:id="@+id/pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/comment_back"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/cancel"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B6B6B5"
                    android:text="取消"/>


                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="发表"
                    android:padding="15dp"
                    android:textColor="#FE7A95"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dis_24"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <zhaohg.emojiview.EmojiEditText
                    android:id="@+id/tv_comment"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext"
                    android:focusable="true"
                    android:hint="评论一下送积分"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:minLines="4"
                    android:lineSpacingExtra="5dp"
                    android:gravity="left|top"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_cccc"/>


            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>